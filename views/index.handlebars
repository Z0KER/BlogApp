<div class="jumbotron">
    <h1 class="display-4">Welcome to the BlogApp</h1>
    <p class="lead">This is a simple BLOG, powered by Node.js + Express + MongoDB.</p>
    <hr class="my-4">
    <p>Here you can read about the news from the world of computing.</p>
    <p class="lead">
    <a class="btn btn-primary btn-lg" href="/users/register" role="button">Create an account</a>
    </p>
</div>

<hr>

<h2>Recent posts:</h2>

{{#each posts}}
<div class="card mt-3">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/post/{{slug}}"><button class="btn btn-success">Read more</button></a>
        <hr>
        <small>Category: {{category.name}}</small><br>
        <small>Publication date: {{date}}</small>
    </div>
</div>
{{else}}
    <h5>No post registered.</h5>
{{/each}}