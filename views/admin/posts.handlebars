<h2>Post List</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button></a>

{{#each posts}} 
    <div class="card mt-3">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>{{description}}</p>
            <small>{{date}}</small>
            <small>{{category.name}}</small>
            <br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Edit post</button></a>
            <form action="/admin/posts/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Delete post</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-2">No post registered!</h4>
{{/each}}