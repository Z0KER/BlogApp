<div class="card">
    <div class="card-body">
        <h4>Edit Post</h4>
        <form action="/admin/post/edit" method="post">
            <input type="hidden" value="{{post._id}}" name="id">
            <label for="title">Title: </label>
            <input type="text" name="title" class="form-control mt-1" value="{{post.title}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control mt-1" value="{{post.slug}}">
            <label for="description">Description: </label>
            <input type="text" name="description" class="form-control mt-1" value="{{post.description}}">
            <label for="content">Content: </label>
            <textarea name="content" cols="30" rows="10" class="form-control mt-1">{{post.content}}</textarea>
            <label for="category">Category: </label>
            <select name="category" class="form-select mt-1">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">No category registered</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3">Edit post</button>
        </form>
    </div>
</div>